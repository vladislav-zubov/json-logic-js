{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/vladislav-zubov/json-logic-js/master/schemas/operators/array/filter.json",

  "title": "filter",
  "description": "You can use filter to keep only elements of the array that pass a test. Note, that inside the logic being used to map, var operations are relative to the array element being worked on.",
  "type": "object",
  "additionalProperties": false,
  "required": ["filter"],
  "properties": {
    "filter": {
      "$ref": "https://raw.githubusercontent.com/vladislav-zubov/json-logic-js/master/schemas/common/binary-args.json"
    }
  },
  "examples": [
    { "filter": [
      { "var": "integers" },
      { "%": [{ "var": "" }, 2] }
    ]}
  ]
}
